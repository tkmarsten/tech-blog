<div class="post">
  <div class="post-header">
    <div>{{title}}</div>
    <div>Posted by {{user.username}} on {{date_created}}</div>
  </div>
  <div class="post-body">
    <p>{{content}}</p>
  </div>
</div>

{{#if loggedIn}}
  <div class="comment">
    <div class="comment-body">
      <label for="comment">Comment</label>
      <textarea id="commentContent" name="comment" row="10"></textarea>
    </div>
    <button id="commentBtn" data-postId="{{id}}">Submit</button>
  </div>
{{/if}}

<hr />

<div class="comment-section">
  <h3>Comments</h3>
  {{#each comments}}
    <div class="comment-card">
      <p>{{content}}</p>
      <div>{{user.username}}, {{date_created}}</div>
    </div>
  {{/each}}
</div>

<script src="/js/comment.js"></script>