{{#each posts}}
  <div class="post">
    <a href="/post/{{id}}" class="post-link">
      <div class="post-header">
        <div>{{title}}</div>
        <div>Posted by {{user.username}} on {{date_created}}</div>
      </div>
      <div class="post-body">
        <p>{{content}}</p>
      </div>
    </a>
  </div>
{{/each}}